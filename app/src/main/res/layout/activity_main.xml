<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:textColor="@color/black"
        android:textSize="56dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:textColor="@color/black"
        android:textSize="56dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/but_ce"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="64dp"
        android:background="#E6E5E5"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="CE"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="normal"
        app:backgroundTint="#F44336"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result" />

    <Button
        android:id="@+id/butc"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="#E6E5E5"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="C"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#FBF7F7"
        app:layout_constraintLeft_toRightOf="@+id/but_ce"
        app:layout_constraintTop_toTopOf="@+id/but_ce" />

    <Button
        android:id="@+id/butdel"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="#E6E5E5"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="DEL"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintStart_toEndOf="@+id/butdivide"
        app:layout_constraintTop_toTopOf="@+id/butdivide" />

    <Button
        android:id="@+id/butdivide"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="#E6E5E5"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="áŸ–"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#FBF7F7"
        app:layout_constraintStart_toEndOf="@+id/butc"
        app:layout_constraintTop_toTopOf="@+id/butc" />

    <Button
        android:id="@+id/but7"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="4dp"
        android:background="@color/design_default_color_primary"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="7"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#2196F3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/but_ce" />

    <Button
        android:id="@+id/but8"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@color/design_default_color_primary"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#2196F3"
        app:layout_constraintLeft_toRightOf="@+id/but7"
        app:layout_constraintTop_toTopOf="@+id/but7" />

    <Button
        android:id="@+id/but9"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@color/design_default_color_primary"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#2196F3"
        app:layout_constraintLeft_toRightOf="@+id/but8"
        app:layout_constraintTop_toTopOf="@+id/but8" />

    <Button
        android:id="@+id/butmulti"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="#E6E5E5"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="x"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#FBF7F7"
        app:layout_constraintLeft_toRightOf="@+id/but9"
        app:layout_constraintTop_toTopOf="@+id/but9" />

    <Button
        android:id="@+id/but4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="4dp"
        android:background="@color/design_default_color_primary"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#2196F3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/but7" />

    <Button
        android:id="@+id/but5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@color/design_default_color_primary"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#2196F3"
        app:layout_constraintLeft_toRightOf="@+id/but4"
        app:layout_constraintTop_toTopOf="@+id/but4" />

    <Button
        android:id="@+id/but6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@color/design_default_color_primary"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#2196F3"
        app:layout_constraintLeft_toRightOf="@+id/but5"
        app:layout_constraintTop_toTopOf="@+id/but5" />

    <Button
        android:id="@+id/butminus"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="#E6E5E5"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#FBF7F7"
        app:layout_constraintLeft_toRightOf="@+id/but6"
        app:layout_constraintTop_toTopOf="@+id/but6" />

    <Button
        android:id="@+id/but1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="4dp"
        android:background="@color/design_default_color_primary"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#2196F3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/but4" />

    <Button
        android:id="@+id/but2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@color/design_default_color_primary"
        android:backgroundTint="#2196F3"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#2196F3"
        app:layout_constraintLeft_toRightOf="@+id/but1"
        app:layout_constraintTop_toTopOf="@+id/but1" />

    <Button
        android:id="@+id/but3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@color/design_default_color_primary"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#2196F3"
        app:layout_constraintLeft_toRightOf="@+id/but2"
        app:layout_constraintTop_toTopOf="@+id/but2" />

    <Button
        android:id="@+id/butplus"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="#E6E5E5"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#FBF7F7"
        app:layout_constraintLeft_toRightOf="@+id/but3"
        app:layout_constraintTop_toTopOf="@+id/but3" />

    <Button
        android:id="@+id/butplusminus"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="4dp"
        android:background="@color/design_default_color_primary"
        android:backgroundTint="#DFE7E3"
        android:gravity="center"
        android:text="+/-"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#2196F3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/but1" />

    <Button
        android:id="@+id/but0"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@color/design_default_color_primary"
        android:backgroundTint="#DFE7E3"
